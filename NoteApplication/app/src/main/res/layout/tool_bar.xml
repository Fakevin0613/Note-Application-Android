                android:background="@drawable/text_border_frame"
                android:layout_alignParentRight="true"
                android:id="@+id/sd"
                android:textSize="16sp"
                android:hint="         Search...         "/>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>